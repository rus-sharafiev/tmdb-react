  "description": "",
  "scripts": {
    "dev": "concurrently --names 'esbuild,less' -c 'yellow,blue' \" esbuild src/index.tsx --outdir=build --bundle --watch \" \" less-watch-compiler styles build index.less \"",
    "build": "lessc styles/index.less build/index.css && esbuild index=src/index.tsx build/index.css --outdir=build --allow-overwrite --bundle --minify",
    "server": "esbuild server/server.ts --outfile=server/index.js --allow-overwrite --bundle --minify --platform=node",
    "tworker": "esbuild src/workers/themeWorker.ts --outfile=build/theme-worker.js --allow-overwrite --bundle --minify",
    "iworker": "esbuild src/workers/imageWorker.ts --outfile=build/image-worker.js --allow-overwrite --bundle --minify",
    "iworkerb": "esbuild src/workers/imageWorkerBItmap.ts --outfile=build/image-worker-bitmap.js --allow-overwrite --bundle --minify",
    "start": "node server/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/http-proxy": "^8.4.0",
    "@fastify/static": "^6.6.0",
    "@material/material-color-utilities": "^0.2.0",
    "@reduxjs/toolkit": "^1.9.1",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/ws": "^8.5.4",
    "axios": "^1.2.2",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.10",
    "fastify": "^4.11.0",
    "formik": "^2.2.9",
    "less": "^4.1.3",
    "less-watch-compiler": "^1.16.3",
    "node-vibrant": "^3.2.1-alpha.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.6.1",
    "swiper": "^9.0.3",
    "typescript": "^4.9.4"
  }
}
